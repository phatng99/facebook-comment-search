{
  "manifest_version": 3,
  "name": "Facebook Comments Search",
  "version": "1.0",
  "description": "Search through Facebook post comments",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ]
}
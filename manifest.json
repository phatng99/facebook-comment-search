{
  "manifest_version": 3,
  "name": "Facebook Comments Search",
  "version": "1.0",
  "description": "Search through Facebook post comments",
  "author": "phatnguyen2499@gmail.com",
  "homepage_url": "https://github.com/phatng99/facebook-comment-search",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": ["i18n.js", "content.js"],
    "matches": ["*://*.facebook.com/*"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.png"
  }
}